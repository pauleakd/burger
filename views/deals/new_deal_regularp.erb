<form method="post" action="/deals/new_deal_regularp">
  <div class="main">
  <label for="menu_item_select"> Select a menu item </label>
  <select id = "menu_item_select" name= "menu_item_id">
  <% @menu_items.each do |menu_item| %>
      <option value= <%=menu_item.id  %>>
         <%=menu_item.burger.name %> at <%= menu_item.eatery.name %> </option>
      <% end  %>
    </select>
  </div>

  <div class="main">
  <label for="day_select"> Select a day </label>
  <select id = "day_select" name= "day_id">
    <% @days.each do |day| %>
    <option value= <%= day.id %>> <%= day.name %> </option>
    <% end %>
  </select>

</div>

<div class="main">

  <label for="name_select"> Name Your Deal (e.g. 30% OFF) </label>
  <input id = "amount_select" type = text name="name">
  </div>

<div class="main">

  <label for="amount_select"> Pick an amount (e.g. 0.3) </label>
  <input id = "amount_select" type = numeric name="amount">

    <input type="submit" value="New deal" />
  </div>
</form>
