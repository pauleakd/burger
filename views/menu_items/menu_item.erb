<div class='main'>
  <form action='/menu_item' method='post'>
    <label for="burger"> Select a burger </label>
    <select id ="burger" name="burger_id">
      <% @burgers.each do |burger| %>
      <option value=<%= burger.id %>> <%= burger.name %> </option>
      <%end %>

    </select>
  </div>

  <div class='main'>

    <label for="eatery"> Select an eatery </label>
    <select id ="eatery" name="eatery_id">
      <% @eateries.each do |eatery| %>
      <option value=<%= eatery.id %>> <%=eatery.name %> </option>
      <%end %>

    </select>

  </div>
  <div class='main'>
    <label for="price"> Set a price </label>
    <input id = "price" type="text" name="price"/>
</div>
<div>
    <input type="submit" value="Add burger to the eatery"/>
</div>

  </form>




</div>
