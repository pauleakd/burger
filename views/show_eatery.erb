<div class="main">
<h1> <%= @eatery.name %> </h1>
 <h3> List of Burgers </h3>
  <ul>
 <% @eatery.burgers.each do |burger| %>
   <li> <%= burger.name %> </li>
   <%end %>
 </ul>

 <h3> List of Deals </h3>
  <ul>
 <% @eatery.deals.each do |deal| %>
   <li> <%= deal.name %> at <%= deal.burger.name %> on <%= deal.day.name  %> </li>
   <%end %>
 </ul>
 </div>
